server {
  listen 80;
  server_name $NGINX_CONSOLE_MINIO_DOMAIN_NAME;

  location /.well-known/acme-challenge/ {
		root /var/www/certbot;
	}

  #return 301 https://$host$request_uri;
}

server {
  listen 443 ssl;
  server_name $NGINX_CONSOLE_MINIO_DOMAIN_NAME;
  
	ssl_certificate /etc/letsencrypt/live/$NGINX_CONSOLE_MINIO_DOMAIN_NAME/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/$NGINX_CONSOLE_MINIO_DOMAIN_NAME/privkey.pem;
	include /etc/letsencrypt/options-ssl-nginx.conf;
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

  proxy_buffering off;

  location / {
    proxy_pass http://$NGINX_UPSTREAM_MINIO:9090;
	  error_log /var/log/minio_errors.log;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
    proxy_http_version 1.1;
    chunked_transfer_encoding off;
  }
}
